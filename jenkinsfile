//      sh '''
//        cd vpc
//        make ${ENV}-${ACTION}
//
//       '''
//      }
//      }
        stage ("dba") {
        input {
                                  message "Should we continue?"
                                  ok "Yes, we should."
                                  submitter "admin"

                              }
          steps {
          when {
          beforeInput true
          branch "production"
          }
          sh '''
            cd dba
            make ${ENV}-${ACTION}

            '''
          }
          }

          stage ("ALB") {

            steps {

              sh '''
               cd alb
              make ${ENV}-${ACTION}

              '''
      }
  }



   }

}