pipeline {
   agent {label "work"}

     environment {
//    ACTION = "apply"
//    ENV    = "dev"
      SSH = credentials('CENTOS_SSH')

   }

   options {
           ansiColor('xterm')
           disableConcurrentBuilds()
       }
     parameters {
     choice(name: 'ENV', choices: ['dev', 'prod'], description: 'parameters')
      string(name: 'ACTION', defaultValue: 'apply', description: 'sring parameters')
      }

      triggers {
      pollSCM('H/2 * * * *')
       }

   stages {

//      stage ("vpc") {
