pipeline {
   agent {label "work"}

   environment {
   ACTION = "apply"
   ENV    = "dev"

   }

   stages {

     stage ("vpc") {
     steps {
     sh '''
       cd vpc
       make ${ENV}-${ACTION}

      '''
     }
     }
        stage ("dba") {
          steps {
          sh '''
            cd dba
            make ${ENV}-${ACTION}

            '''
          }
          }

          stage ("ALB") {
            steps {

              sh '''
               cd alb
              make ${ENV}-${ACTION}

              '''
      }
  }



   }

}